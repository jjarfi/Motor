<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:descendantFocusability="blocksDescendants"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:descendantFocusability="blocksDescendants"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="5dp">
        <!--  card_view:cardElevation="2dp"
        card_view:cardMaxElevation="4dp"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:descendantFocusability="blocksDescendants"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/l_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/namakerusakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/expandableLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_layout"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4dd0e1" />

                <TextView
                    android:id="@+id/mean1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_margin="1dp"
                    android:gravity="start|center"
                    android:text="ID Kerusakan : "
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsiText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean1"
                    android:layout_margin="1dp"
                    android:gravity="left"
                    android:textColor="#FFFFFF" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4dd0e1" />

                <TextView
                    android:id="@+id/mean2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deskripsiText1"
                    android:layout_margin="1dp"
                    android:gravity="start|center"

                    android:text="Informasi : "
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsiText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean2"
                    android:layout_margin="1dp"
                    android:gravity="left"
                    android:textColor="#FFFFFF" />
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4dd0e1" />
                <TextView
                    android:id="@+id/mean3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deskripsiText2"
                    android:layout_margin="1dp"
                    android:gravity="start|center"

                    android:text="Penyebab : "
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsiText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean3"
                    android:layout_margin="1dp"
                    android:gravity="left"
                    android:textColor="#FFFFFF" />
                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#4dd0e1" />
                <TextView
                    android:id="@+id/mean4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deskripsiText3"
                    android:layout_margin="1dp"
                    android:gravity="start|center"
                    android:text="Solusi : "
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsiText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean4"
                    android:layout_margin="1dp"
                    android:gravity="left"
                    android:textColor="#FFFFFF" />
                <ImageView
                    android:layout_width="match_parent"
                    android:background="#ccc"
                    android:layout_below="@id/deskripsiText4"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>